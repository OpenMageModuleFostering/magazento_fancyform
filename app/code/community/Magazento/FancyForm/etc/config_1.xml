    <global>
        <models>
            <fancyform>
                <class>Magazento_FancyForm_Model</class>
                <resourceModel>fancyform_mysql4</resourceModel>
            </fancyform>
            <fancyform_mysql4>
                <class>Magazento_FancyForm_Model_Mysql4</class>
                <entities>
                    <fancyform>
                        <table>fancyform</table>
                    </fancyform>
                </entities>
            </fancyform_mysql4>
        </models>
        <resources>
            <fancyform_setup>
                <setup>
                    <module>Magazento_FancyForm</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </fancyform_setup>
            <fancyform_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </fancyform_write>
            <fancyform_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </fancyform_read>
        </resources>
        <blocks>
            <fancyform>
                <class>Magazento_FancyForm_Block</class>
                <rewrite>
                    <contactform>Magazento_FancyForm_Block_ContactForm</contactform>
                </rewrite>
            </fancyform>
        </blocks>
        <helpers>
            <fancyform>
                <class>Magazento_FancyForm_Helper</class>
            </fancyform>
        </helpers>
        <rewrite>
            <magazento_fancyform_contacts_index>
                <from><![CDATA[#^/contacts/#]]>
                </from>
                <to>/fancyform/index/</to>
            </magazento_fancyform_contacts_index>
        </rewrite> 
    </global>
    <default>
        <fancyform>
            <options>
                <enable>1</enable>
                <blocktitle>Contact Us</blocktitle>
                <thanksText>Well Done, thank you for your message !</thanksText>
            </options>
            <visual>
                <textAppearingTime>1000</textAppearingTime>
                <letterMovingTime>3000</letterMovingTime>
                <envelopeOpeningTime>1000</envelopeOpeningTime>
                <envelopeClosingTime>1000</envelopeClosingTime>
                <letterFadingInTime>300</letterFadingInTime>
                <letterFadingOutTime>300</letterFadingOutTime>
                <stampAppearingTime>1000</stampAppearingTime>
            </visual>
        </fancyform>
    </default>
</config>
