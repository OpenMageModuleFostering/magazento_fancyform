<config>
    <modules>
        <Magazento_FancyForm>
            <version>0.1.0</version>
        </Magazento_FancyForm>
    </modules>
    <frontend>
        <routers>
            <fancyform>
                <use>standard</use>
                <args>
                    <module>Magazento_FancyForm</module>
                    <frontName>fancyform</frontName>
                </args>
            </fancyform>
            <contacts>
                <args>
                    <modules>
                        <Magazento_FancyForm before="Mage_Contacts">Magazento_FancyForm</Magazento_FancyForm>
                    </modules>
                </args>
            </contacts> 
        </routers>
        <layout>
            <updates>
                <fancyform>
                    <file>magazento_fancyform.xml</file>
                </fancyform>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <fancyform>
                <use>admin</use>
                <args>
                    <module>Magazento_FancyForm</module>
                    <frontName>fancyform</frontName>
                </args>
            </fancyform>
        </routers>
    </admin>
